<% content = code %>
<% if defined?(lang) %>
	<% cache Digest::SHA1.hexdigest(code) do %>
		<% content = highlight_code(lang, code).html_safe %>
	<% end %>
<% end %>
<div class="oor-code-block">
	<div class="oor-code-header">
		<%=title%>
	</div>
	<div class="oor-code-ray">
		<div class="code">
			<pre><%=content%></pre>
		</div>
	</div>
</div>	